                        <a class="collapse-item" href="404.html">404 Page</a>
                        <a class="collapse-item" href="blank.html">Blank Page</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="charts.html">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Charts</span></a>
            </li>
            
            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="/admin/1">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Users Data</span></a>
            <!-- </li> -->

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->


          <!-- Begin Page Content -->
          <div class="container-fluid">
            <% if (errorMessage && errorMessage.trim() !== "") { %>
            <div class="alert alert-danger mt-3">
              <%= errorMessage %>
              <button
                type="button"
                class="close"
                data-dismiss="alert-danger"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% } %>


            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Tables</h1>
            <p class="mb-4">
              This Admin data table is used by users who has acess to the Admin
              Dashbord, they can edit the users delete or make it activate or
              deactivate
            </p>
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Admin Data</h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Active</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach(user => { %>
                      <tr>
                        <td>
                          <span id="username_<%= user.id %>"
                            ><%= user.name %></span
                          >
                        </td>

                        <td>
                          <span id="email_<%= user.id %>"
                            ><%= user.email %></span
                          >
                        </td>
                        <td>
                          <span id="email_<%= user.id %>"
                            ><%= user.S_name %></span
                          >
                        </td>
                        <td>
                          <span id="city_<%user.id %>"
                            ><%= user.city_name %></span
                          >
                        </td>
                        <td><%= user.is_admin ? 'Active' : 'Inactive' %></td>
                        <td>
                          <% if (user.is_admin) { %>
                          <!-- If user is active, provide option to deactivate -->
                          <form
                            action="/admin/deactivate/<%= user.id %>"
                            method="POST"
                          >
                            <button
                              type="submit"
                              class="btn btn-danger btn-large mb-3"
                            >
                              Deactivate
                            </button>
                          </form>
                          <% } %> <% if (!user.is_admin) { %>
                          <!-- If user is active, provide option to deactivate -->
                          <form
                            action="/admin/activate/<%= user.id %>"
                            class="mb-3"
                            method="POST"
                          >
                            <button
                              type="submit"
                              class="btn btn-primary btn-large"
                            >
                              Activate
                            </button>
                          </form>
                          <% } %>

                          <!-- Option to edit user information -->
                          <button
                            class="btn btn-primary btn-large"
                            data-toggle="modal"
                            data-target="#editModal_<%= user.id %>"
                          >
                            Edit
                          </button>
                          <!-- Option to delete user -->
                          <form
                            action="/admin/delete/<%= user.id %>"
                            method="POST"
                            class="d-inline"
                          >
                            <% if (isLoggedIn != user.id) { %>
                            <input
                              type="hidden"
                              name="confirmation"
                              value="true"
                            />
                            <button
                              type="button"
                              class="btn btn-danger btn-large"
                              onclick="confirmDelete('<%= user.id %>')"
                            >
                              Delete
                            </button>
                            <% } else { %>
                            <button
                              type="button"
                              class="btn btn-danger btn-large"
                              disabled
                            >
                              Delete
                            </button>
                            <% } %>
                          </form>
                        </td>
                      </tr>
                      <!-- Edit Modal -->
                      <div
                        class="modal fade"
                        id="editModal_<%= user.id %>"
                        tabindex="-1"
                        role="dialog"
                        aria-labelledby="editModalLabel"
                        aria-hidden="true"
                      >
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="editModalLabel">
                                Edit User
                              </h5>
                              <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                              >
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <div class="form-group">
                                <label for="editUsername">Username:</label>
                                <!-- Add an underscore (_) before the userId -->
                                <input
                                  type="text"
                                  class="form-control"
                                  id="editUsername_<%= user.id %>"
                                  value="<%= user.name %>"
                                />
                              </div>
                              <div class="form-group">
                                <label for="editEmail">Email:</label>
                                <!-- Add an underscore (_) before the userId -->
                                <input
                                  type="email"
                                  class="form-control"
                                  id="editEmail_<%= user.id %>"
                                  value="<%= user.email %>"
                                />
                              </div>
                              <div class="form-group">
                                <label for="editState">State:</label>
                                <!-- Add an underscore (_) before the userId -->
                                <input
                                  type="text"
                                  class="form-control"
                                  id="editState_<%= user.id %>"
                                  value="<%= user.S_name %>"
                                />
                              </div>
                              <div class="form-group">
                                <label for="editCity">City:</label>
                                <!-- Add an underscore (_) before the userId -->
                                <input
                                  type="text"
                                  class="form-control"
                                  id="editCity_<%= user.id %>"
                                  value="<%= user.city_name %>"
                                />
                              </div>
                              
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary"
                                data-dismiss="modal"
                              >
                                Close
                              </button>
                              <!-- Add an onclick event to call the saveChanges function with the userId -->
                              <button
                                type="button"
                                class="btn btn-primary"
                                onclick='saveChanges("<%= user.id %>")'
                              >
                                Save changes
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>

                      <% }) %>
                    </tbody>
                  </table>
                  <div class="pagination mt-3">
                    <% if (currentPage > 1) { %>
                    <a
                      href="/admin/<%= currentPage - 1 %>"
                      class="btn btn-secondary btn-sm"
                      >Previous</a
                    >
                    <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
                    <a
                      href="/admin/<%= i %>"
                      class="btn btn-<%= currentPage === i ? 'primary' : 'secondary' %> btn-sm"
                      ><%= i %></a
                    >
                    <% } %> <% if (currentPage < totalPages) { %>
                    <a
                      href="/admin/<%= currentPage + 1 %>"
                      class="btn btn-secondary btn-sm"
                      >Next</a
                    >
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright &copy; Your Website 2020</span>
            </div>
          </div>
        </footer>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

